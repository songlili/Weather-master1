<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F0F0F0F0"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/iv_back"
                    android:onClick="back"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lwo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="修改当前位置"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#88000000"/><!-- 分割线 -->
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_curr_location"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/eoo"/>
        <TextView
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前设定"
            android:textColor="#000000"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_curr_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:textSize="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gps_location"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp">
            ›<ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/eyt"/>
            <TextView
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位位置"
                android:textColor="#000000"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_auto_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前定位不可用"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:textSize="16dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_auto_location"
                android:background="#88000000"
                android:layout_marginTop="3dp"/><!-- 分割线 -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hand_location"
            android:background="#FFFFFF"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/ldf"/>
            <TextView
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手动输入"
                android:textColor="#000000"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_hand_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:textSize="16dp"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88000000"/><!-- 分割线 -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wheel_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_province"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_city"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_county"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#1484ff"
            android:clickable="true"
            android:onClick="saveHandSelectLoaction"/>
    </LinearLayout>

</RelativeLayout>
