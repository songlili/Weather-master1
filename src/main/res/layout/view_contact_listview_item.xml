<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weather="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    weather:hasUnderLine="true"
    android:paddingTop="3dp"
    android:paddingLeft="6dp"
    android:paddingBottom="3dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/weather_icon_00"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曹文浩"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/tv_more_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:text="该联系人有多个手机号"/>
        </RelativeLayout>
        <CheckBox
            android:id="@+id/cb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_under_line"
        android:layout_width="match_parent"
        android:background="#88000000"
        android:layout_height="1dp"/>
</LinearLayout>